<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile_notification_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/person_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/post_image_notification_item"
        android:layout_toEndOf="@+id/image_profile_notification_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName_notification_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yo yo"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_notification_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification re" />

    </LinearLayout>

    <ImageView
        android:id="@+id/post_image_notification_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_launcher_background" />

</RelativeLayout>